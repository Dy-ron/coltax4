
<%= form_for(:coupon,  url: obtain_coupon_path, id: "obtain-coupon") do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "*Nombre completo", class: "form-control", required: true%>
  </div>
  <div class="form-group">
    <%= f.text_field :identification, placeholder: "*Identificación", class: "form-control", required: true%>
  </div>
  <div class="form-group">
    <%= f.text_field :email, placeholder: "*Correo electrónico", class: "form-control", required: true, type: "email"%>
  </div>
  <div class="form-group">
    <%= f.text_field :phone, placeholder: "*Celular", class: "form-control", required: true, type: "number"%>
  </div>
  <div class="form-group">
    <%= f.text_field :birthday, placeholder: "*Cumpleaños", class: "form-control", required: true, type: "date" %>
  </div>
  <div class="form-group">
    <%= f.select :city_name, @campaign.cities.collect { |c| [c] },
                                         { prompt: "Elige tu ciudad"},
                                         { class: 'form-control shadow'}  %>
    <%= f.hidden_field :campaign_id, value: @campaign.id if !@campaign.nil? %>
  </div>
  <div>
    <p> * Haciendo click en GENERA TU BONO estás aceptando nuestros
      <%= content_tag :a, "términos y condiciones", href: "#terms_and_coditions", data: {toggle: 'modal'}%>
       y aceptas recibir información vía correo electrónico de Estudio de Moda S.A.</p>
  </div>
  <div class="actions">
     <%= f.submit "Genera tu bono", class: "btn btn-send", style: "background-color: #{@campaign.color_buttons if !@campaign.nil? }; color: #FFF" %>
  </div>
<% end %>
