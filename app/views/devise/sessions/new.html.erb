<!--  New_Session = Login / Regist  -->

<%= nav_bar brand: "Colta×", brand_link: root_path, responsive: true do %>
  <% menu_group pull: :right do %>
    <%= menu_item " • Home", home_path %>
    <%= menu_item " • Afiliados", '#' %>
    <%= menu_item " • Empresas", '#' %>
    <%= menu_item " • Contactos", '#' %>
    <%= menu_item " ■ WebMaster", _superadmin_header_path %>
  <% end %>
<% end %>

<div class="container">
  <div class="admin-container">

    <div id="cat" style = "background-color: white">
      <br><br><%= image_tag 'cat_fast.jpg'%><br><br><br>
    </div>

    <div class="login" style = "background-color: marina">  <!-- Ingresar -->
      <h3> Inicia sesión </h3><br>
      <%= link_to 'Login','#', onclick: 'showLogin()' %> |
      <%= link_to 'Registro', new_user_registration_path %><br>
    </div> <br> <br>

    <div class="clearfix"></div>

    <div id="form-login">  <!-- Opciones -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <P><%= image_tag 'G-ATOS.png', id:'cat-vol'%><br>

      <div class="form-group width=70%">    <!-- e-mail -->
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="form-group">  <!-- password -->
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>  <!-- Recordarme -->
      <div class="form-group mb-20">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Recordarme' %>
      </div>
      <% end -%>

      <div class="actions mb-20">   <!-- Botón Iniar Sesión -->
        <%= f.submit "Iniciar sesión", class: 'btn btn-success' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>   <!-- Mensajes de posible error -->
    </div>

  </div>
</div>
