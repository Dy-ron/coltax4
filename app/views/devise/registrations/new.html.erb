<%= nav_bar brand: "Coltax®", brand_link: root_path, responsive: true do %>
  <% menu_group pull: :right do %>
    <%= menu_item " • Home", home_path %>
    <%= menu_item " • Contact", '#' %>
    <%= menu_item " • Car Regist", '#' %>
    <%= menu_item " • Otros", '#' %>
    <%= menu_item " • User edit", edit_user_registration_path %>
    <!-- <%= menu_item " • Sesiónx", admin_path %> -->
  <% end %>
<% end %>

<P><%= image_tag 'G_volante.jpg', id:'cat-vol'%></P>
<h4 class="form-group col-xs-12"> Sign up </h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-xs-6">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, required: 'required', class: 'form-control' %>
  </div>

  <div class="form-group col-xs-6">
    <%= f.label :role %><br>
    <%= f.select :role, User.roles.keys.map { |u| [u.humanize, u] }, required: 'required',
     class: 'form-control' %>
  </div>

  <div class="clearfix"></div>

  <div class="form-group col-xs-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> chart min)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", required: 'required',
     class: 'form-control' %>
  </div>

  <div class="form-group col-xs-6" style="margin-bottom: 30px;">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: 'required',
     class: 'form-control' %>
  </div>

  <div class="clearfix"></div>

  <div class="form-group col-xs-6">
    <%= f.label :cia %><br>
    <%= f.text_field :cia, required: 'required', class: 'form-control' %>
  </div>

  <div class="form-group col-xs-6"  style="margin-bottom: 30px;">
    <%= f.label :car %><br>
    <%= f.text_field :car, required: 'required', class: 'form-control' %>
  </div>

  <div class="clearfix"></div>

  <div class="actions col-xs-12 text-center">
    <%= f.submit "Registrarse" %>
    <div style="margin-bottom: 20px;">...</div>
    <%= render "devise/shared/links" %>
  </div>

<% end %>
