<!-- Restablecer Contraseña -->

<% content_for :body_class, "login" %>

<div class="container">
  <div class="admin-container">
    <%= image_tag 'cat_forget.jpeg'%>
    <h2>¿Olvidaste tu contraseña?</h2>

    <%= form_for(resource, as: resource_name,
      url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, 'Correo electrónico' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="actions mb-20">
        <%= f.submit "Enviar instrucciones", class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
